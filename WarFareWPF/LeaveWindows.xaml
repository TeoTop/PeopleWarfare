<Window x:Class="WarFareWPF.LeaveWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LeaveWindows" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label Content="Souhaitez-vous quitter la partie ?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" Height="37" Width="301"/>
        <Grid HorizontalAlignment="Left" Height="35" Margin="0,5,-0.4,0" VerticalAlignment="Top" Width="494" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="375*"/>
                <ColumnDefinition Width="119*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Annuler" HorizontalAlignment="Left" Margin="265,10,0,-5" VerticalAlignment="Top" Width="100" Height="30" FontSize="18" Click="btnAnnuler"/>
            <Button Content="Quitter" Grid.Column="1" HorizontalAlignment="Left" Margin="9.8,10,0,-5" VerticalAlignment="Top" Width="100" Height="30" FontSize="18" Click="btnQuitter"/>
        </Grid>

    </Grid>
</Window>
