<Window x:Class="TestSauvegarde.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="btnSaveFile" Click="btnSaveFile_Clic" Margin="0,0,20,0" Width="60">Save file</Button>
            <Button Name="ajouter" Click="btnAjouter" Margin="20,0,20,0" Width="60">Ajouter</Button>
            <Button Name="load" Click="btnLoad" Margin="20,0,0,0" Width="60">load</Button>
        </WrapPanel>
        <TextBox Name="txtEditor" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>